# =============================================================================
# Ghostty Configuration
# Theme: Dracula | Font: HackGen Console NF | Shell: zsh + zimfw + pure
# =============================================================================

# -----------------------------------------------------------------------------
# Theme & Colors
# -----------------------------------------------------------------------------
theme = Dracula

# -----------------------------------------------------------------------------
# Font Settings
# -----------------------------------------------------------------------------
font-family = "HackGen Console NF"
font-size = 16

# -----------------------------------------------------------------------------
# Background & Transparency
# -----------------------------------------------------------------------------
# Set background opacity (0.0 = fully transparent, 1.0 = fully opaque)
background-opacity = 0.95

# Apply opacity to cell backgrounds as well
background-opacity-cells = true

# -----------------------------------------------------------------------------
# Window Settings
# -----------------------------------------------------------------------------
# Window size (in cells)
window-width = 120
window-height = 35

# Padding around the terminal content
window-padding-x = 10
window-padding-y = 10

# macOS-specific: Show tabs in titlebar
macos-titlebar-style = tabs

# Save and restore window state on restart
window-save-state = always

# Quit Ghostty when the last window is closed
quit-after-last-window-closed = true

# -----------------------------------------------------------------------------
# Cursor Settings
# -----------------------------------------------------------------------------
cursor-style = block
cursor-style-blink = false

# -----------------------------------------------------------------------------
# Shell Integration (zsh + zimfw + pure)
# -----------------------------------------------------------------------------
# Features:
#   - no-cursor: Disable automatic cursor style changes (managed manually)
#   - sudo: Preserve terminal info when using sudo
#   - title: Update window title with current directory/command
shell-integration-features = no-cursor,sudo,title

# -----------------------------------------------------------------------------
# Clipboard & Selection
# -----------------------------------------------------------------------------
# Copy selected text to clipboard automatically
copy-on-select = clipboard

# -----------------------------------------------------------------------------
# Auto-Update Settings
# -----------------------------------------------------------------------------
auto-update = check
auto-update-channel = stable
